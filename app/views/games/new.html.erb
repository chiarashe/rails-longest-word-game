<h1> New Game </h1>

<div class="cards">
  <% @letters.each do |letter| %>
    <div class="letter-box"> <%= letter %> </div>
  <% end %>
</div>


<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, value: @letters %>
  <p>What's the longest word you can find</p>
  <input class="box" type="text" name="word">
  <input class="btn" type="submit" value="Play">
</form>
